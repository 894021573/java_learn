<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ht.blog.dao.HCategoryMapper">
  <resultMap id="BaseResultMap" type="com.ht.blog.entity.HCategory">
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="created_at" jdbcType="INTEGER" property="createdAt" />
    <result column="updated_at" jdbcType="INTEGER" property="updatedAt" />
  </resultMap>
  <insert id="insert" parameterType="com.ht.blog.entity.HCategory">
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into h_category (`name`, created_at, updated_at
      )
    values (#{name,jdbcType=VARCHAR}, #{createdAt,jdbcType=INTEGER}, #{updatedAt,jdbcType=INTEGER}
      )
  </insert>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, `name`, created_at, updated_at
    from h_category
  </select>
</mapper>