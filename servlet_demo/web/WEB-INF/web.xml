<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>cn.javaweb.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/User</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Goods</servlet-name>
        <servlet-class>cn.javaweb.servlet.GoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Goods</servlet-name>
        <url-pattern>/Goods</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>cn.javaweb.filter.AuthFilter</filter-class>
        <init-param>
            <!-- 设置不需要验证的url -->
            <param-name>noValidatePath</param-name>
            <param-value>/User</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>